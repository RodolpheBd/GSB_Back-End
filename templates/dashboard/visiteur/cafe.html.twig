{% extends 'base.html.twig' %}

{% block title %}Frais Café{% endblock %}

{% block body %}
	<div class="header">Frais Café</div>
	
	<div class="container">
		<form method="post" action="{{ path('ajout_cafe') }}" class="fee-form">

			<div class="form-group">
				<label for="date">Date</label>
				<input type="date" id="date" name="date" class="form-control" required>
			</div>

			<div class="form-group">
				<label for="montant">Montant (€)</label>
				<input type="number" step="0.01" id="montant" name="montant" class="form-control" required>
			</div>
			
			<div class="form-group">
				<label for="justificatif">Justificatif</label>
				<input type="text" id="justificatif" name="justificatif" class="form-control" required>
			</div>
			
			<button type="submit" class="btn btn-primary">Ajouter</button>
			<a href="{{ path('visiteur_dashboard') }}" class="btn btn-secondary">Retour</a>
		</form>
	</div>
{% endblock %}
